# Configurações do TesteOn Firebase
# Copie este arquivo para .env e preencha com seus valores

# Chave secreta do Flask (gerar uma chave segura)
SECRET_KEY=sua_chave_secreta_muito_segura_aqui

# Configurações do Firebase (obter do Firebase Console)
FIREBASE_PRIVATE_KEY_ID=seu_private_key_id_aqui
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSua_chave_privada_aqui\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@testeon-app.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=123456789012345678901
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40testeon-app.iam.gserviceaccount.com

# Configurações do Render (opcional para desenvolvimento local)
PORT=5000 